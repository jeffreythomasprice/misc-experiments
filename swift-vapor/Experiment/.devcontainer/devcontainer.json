{
	"name": "Swift",
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"pvasek.sourcekit-lsp--dev-unofficial",
				"vadimcn.vscode-lldb",
				"vknabel.vscode-apple-swift-format"
			],
			"settings": {
				"lldb.adapterType": "bundled",
				"lldb.executable": "/usr/bin/lldb",
				"terminal.integrated.shell.linux": "/bin/bash"
			}
		}
	}
}