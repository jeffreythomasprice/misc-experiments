#version 300 es

uniform mat4 uniform_matrix;

in vec3 in_position;
in vec2 in_texture_coordinate;
in vec4 in_color;

out vec2 varying_texture_coordinate;
out vec4 varying_color;

void main() {
	gl_Position = uniform_matrix * vec4(in_position.xyz, 1);
	varying_texture_coordinate = in_texture_coordinate;
	varying_color = in_color;
}
