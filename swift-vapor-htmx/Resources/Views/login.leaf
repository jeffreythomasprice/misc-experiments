#extend("page"):
#export("body"):

<form
	id="loginForm"
	hx-post="api/login"
	hx-swap="none"
>
	<div>
		<label for="username">Username:</label>
		<input
			name="username"
			type="text"
			placeholder="Username"
		></label>
	</div>
	<div>
		<label for="password">Password:</label>
		<input
			name="password"
			type="password"
			placeholder="Password"
		></label>
	</div>
	<button type="submit">Log In</button>
	<div id="loginErrors"></div>
</form>

#endexport
#endextend