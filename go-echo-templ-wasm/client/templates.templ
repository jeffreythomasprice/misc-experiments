package main

templ index() {
	@loginForm()
}

templ loginForm() {
	<form onsubmit="submit">
		<div>
			<label
 				for="username"
			>Username:</label>
			<input
 				type="text"
 				name="username"
 				placeholder="Username"
 				@ref="username"
			/>
		</div>
		<div>
			<label
 				for="password"
			>Password:</label>
			<input
 				type="password"
 				name="password"
 				placeholder="Password"
 				@ref="password"
			/>
		</div>
		<button type="submit">Login</button>
	</form>
}
